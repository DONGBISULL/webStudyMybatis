<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.prop.dao.DataBasePropertyDAO">
	<select id="selectDataBasePropertyList"
		parameterType="DataBasePropertyVO" resultType="DataBasePropertyVO">

		select property_name , property_value, description
		from DATABASE_PROPERTIES
		<!-- OGNL -->
		<!-- prefixOverrides 잘못 들어간 or 연산자 없애준다 -->
		<trim prefix="WHERE" prefixOverrides="OR">
			<if test="param!=null">
				<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(param.propertyName)">
					OR INSTR(PROPERTY_NAME ,#{param.propertyName}) >0
				</if>
				<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(param.propertyValue)">
				 	OR INSTR(PROPERTY_NAME ,#{param.propertyValue}) >0
				</if>
				<if test="@org.apache.commons.lang3.StringUtils@isNotBlank(param.description)">
				 	OR INSTR(PROPERTY_NAME ,#{param.description}) >0
				</if>

			</if>
		</trim>
	</select>

</mapper>